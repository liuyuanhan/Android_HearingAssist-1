<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/white"
    tools:ignore="SpUsage,ContentDescription">

    <ImageView
        android:id="@+id/iv_no_devices"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginStart="25dp"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_no_devices" />

    <TextView
        android:id="@+id/tv_no_devices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/iv_no_devices"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true"
        android:textStyle="bold"
        android:textColor="@color/black_toolbar_title"
        android:textSize="16dp"
        android:text="@string/tips_no_devices_found"/>
</RelativeLayout>