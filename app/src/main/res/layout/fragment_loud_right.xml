<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="SpUsage,ContentDescription"
    tools:context=".ui.main.LoudFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_loud_r"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/tv_hearing_modes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:textSize="17dp"
            android:textStyle="bold"
            android:textColor="@color/black_toolbar_title"
            android:text="@string/Loud_Sound_Protection"/>

        <View
            android:id="@+id/view_bg_l_r"
            android:layout_width="160dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="47dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/shape_device_l_r"/>

        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_L"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="@id/view_bg_l_r"
            app:layout_constraintTop_toTopOf="@id/view_bg_l_r"
            app:layout_constraintBottom_toBottomOf="@id/view_bg_l_r"
            android:layout_marginStart="22dp"
            android:scaleType="centerInside"
            android:src="@drawable/icon_l_device"/>

        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_l_r"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerInside"
            app:layout_constraintTop_toTopOf="@id/view_bg_l_r"
            app:layout_constraintBottom_toBottomOf="@id/view_bg_l_r"
            app:layout_constraintStart_toStartOf="@id/view_bg_l_r"
            app:layout_constraintEnd_toEndOf="@id/view_bg_l_r"
            android:src="@drawable/icon_l_r_connected"/>

        <ImageView
            android:id="@+id/iv_R"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="@id/view_bg_l_r"
            app:layout_constraintEnd_toEndOf="@id/view_bg_l_r"
            app:layout_constraintTop_toTopOf="@id/view_bg_l_r"
            app:layout_constraintBottom_toBottomOf="@id/view_bg_l_r"
            android:scaleType="centerInside"
            android:src="@drawable/icon_r_device"/>

        <ImageView
            android:id="@+id/iv_mode_R"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/view_bg_l_r"
            app:layout_constraintBottom_toBottomOf="@id/view_bg_l_r"
            android:layout_marginEnd="16dp"
            android:src="@drawable/icon_mode_conversation_nor"/>

        <ImageView
            android:visibility="invisible"
            android:id="@+id/iv_mode_L"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/view_bg_l_r"
            app:layout_constraintBottom_toBottomOf="@id/view_bg_l_r"
            android:layout_marginEnd="56dp"
            android:src="@drawable/icon_mode_conversation_blue"/>

        <View
            android:id="@+id/view_border"
            android:layout_width="match_parent"
            android:layout_height="398dp"
            app:layout_constraintTop_toBottomOf="@id/view_bg_l_r"
            android:background="@drawable/shape_border"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="12dp"/>
        
        <TextView
            android:id="@+id/tv_no_compression"
            android:layout_width="157dp"
            android:layout_height="36dp"
            app:layout_constraintStart_toStartOf="@id/view_border"
            app:layout_constraintEnd_toEndOf="@id/view_border"
            app:layout_constraintTop_toTopOf="@id/view_border"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:background="@drawable/selector_loud_bg"
            android:textSize="14dp"
            android:textColor="@color/selector_loud_color_text"
            android:text="@string/No_Compression"/>

        <TextView
            android:id="@+id/tv_low_compression"
            android:layout_width="157dp"
            android:layout_height="36dp"
            app:layout_constraintStart_toStartOf="@id/view_border"
            app:layout_constraintEnd_toEndOf="@id/view_border"
            app:layout_constraintTop_toBottomOf="@id/tv_no_compression"
            android:layout_marginTop="18dp"
            android:gravity="center"
            android:background="@drawable/selector_loud_bg"
            android:textSize="14dp"
            android:textColor="@color/selector_loud_color_text"
            android:text="@string/Low_Compression"/>

        <TextView
            android:id="@+id/tv_medium_compression"
            android:layout_width="157dp"
            android:layout_height="36dp"
            app:layout_constraintStart_toStartOf="@id/view_border"
            app:layout_constraintEnd_toEndOf="@id/view_border"
            app:layout_constraintTop_toBottomOf="@id/tv_low_compression"
            android:layout_marginTop="18dp"
            android:gravity="center"
            android:background="@drawable/selector_loud_bg"
            android:textSize="14dp"
            android:textColor="@color/selector_loud_color_text"
            android:text="@string/Medium_Compression"/>

        <TextView
            android:id="@+id/tv_high_compression"
            android:layout_width="157dp"
            android:layout_height="36dp"
            app:layout_constraintStart_toStartOf="@id/view_border"
            app:layout_constraintEnd_toEndOf="@id/view_border"
            app:layout_constraintTop_toBottomOf="@id/tv_medium_compression"
            android:layout_marginTop="18dp"
            android:gravity="center"
            android:background="@drawable/selector_loud_bg"
            android:textSize="14dp"
            android:textColor="@color/selector_loud_color_text"
            android:text="@string/High_Compression"/>

        <RadioGroup
            android:visibility="invisible"
            android:id="@+id/radioGroup_L"
            app:layout_constraintEnd_toStartOf="@id/tv_no_compression"
            app:layout_constraintTop_toTopOf="@id/view_border"
            android:layout_marginTop="16dp"
            android:layout_marginStart="47dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                style="@style/Widget.App.RadioButton.L"
                android:id="@+id/rb_l_no"
                android:layout_width="wrap_content"
                android:layout_height="36dp"/>
            <RadioButton
                style="@style/Widget.App.RadioButton.L"
                android:id="@+id/rb_l_low"
                android:layout_marginTop="18dp"
                android:layout_width="wrap_content"
                android:layout_height="36dp"/>
            <RadioButton
                style="@style/Widget.App.RadioButton.L"
                android:id="@+id/rb_l_set_2"
                android:layout_width="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_height="36dp" />
            <RadioButton
                style="@style/Widget.App.RadioButton.L"
                android:id="@+id/rb_l_set_3"
                android:layout_marginTop="18dp"
                android:layout_width="wrap_content"
                android:layout_height="36dp"/>
        </RadioGroup>

        <TextView
            android:id="@+id/tv_l"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="@id/radioGroup_L"
            app:layout_constraintTop_toBottomOf="@id/radioGroup_L"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            android:textSize="16dp"
            android:text="@string/L"
            android:textColor="@color/blue_09"
            android:textStyle="bold"/>

        <RadioGroup
            android:id="@+id/radioGroup_R"
            app:layout_constraintStart_toEndOf="@id/tv_no_compression"
            app:layout_constraintTop_toTopOf="@id/view_border"
            android:layout_marginTop="16dp"
            android:layout_marginStart="12dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                style="@style/Widget.App.RadioButton.R"
                android:id="@+id/rb_r_no"
                android:layout_width="wrap_content"
                android:layout_height="36dp"/>
            <RadioButton
                style="@style/Widget.App.RadioButton.R"
                android:id="@+id/rb_r_low"
                android:layout_marginTop="18dp"
                android:layout_width="wrap_content"
                android:layout_height="36dp"/>
            <RadioButton
                style="@style/Widget.App.RadioButton.R"
                android:id="@+id/rb_r_set_2"
                android:layout_width="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_height="36dp" />
            <RadioButton
                style="@style/Widget.App.RadioButton.R"
                android:id="@+id/rb_r_set_3"
                android:layout_marginTop="18dp"
                android:layout_width="wrap_content"
                android:layout_height="36dp"/>
        </RadioGroup>

        <TextView
            android:id="@+id/tv_r"
            app:layout_constraintStart_toStartOf="@id/radioGroup_R"
            app:layout_constraintTop_toBottomOf="@id/radioGroup_R"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            android:textSize="16dp"
            android:text="@string/R"
            android:textColor="@color/red_C7"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/view_border"
            app:layout_constraintStart_toStartOf="@id/view_border"
            app:layout_constraintTop_toBottomOf="@id/tv_high_compression"
            android:layout_marginStart="36dp"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="60dp"
            android:text="@string/tips_loud_settings"
            android:textColor="@color/black_toolbar_title"
            android:textSize="14dp" />

        <View
            android:id="@+id/view_0"
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:background="@drawable/shape_radius"
            app:layout_constraintTop_toTopOf="@id/tv_0"
            app:layout_constraintStart_toStartOf="@id/view_border"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>