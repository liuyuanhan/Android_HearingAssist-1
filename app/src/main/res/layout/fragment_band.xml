<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.main.BandFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp">
        <RelativeLayout
            android:id="@+id/layout_device_L_R"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:background="@drawable/shape_band_l_r"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="17dp"
            android:layout_marginStart="16dp">
            <ImageView
                android:id="@+id/iv_L"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:scaleType="centerInside"
                android:background="@drawable/shape_band_l"
                android:src="@drawable/icon_l_device"/>
            <ImageView
                android:id="@+id/iv_R"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:scaleType="centerInside"
                android:background="@drawable/shape_band_r"
                android:layout_alignParentEnd="true"
                android:src="@drawable/icon_r_device"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_mode_R"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/layout_device_L_R"
            app:layout_constraintBottom_toBottomOf="@id/layout_device_L_R"
            android:layout_marginEnd="16dp"
            android:src="@drawable/icon_mode_conversation_nor"/>

        <ImageView
            android:id="@+id/iv_mode_L"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/layout_device_L_R"
            app:layout_constraintBottom_toBottomOf="@id/layout_device_L_R"
            android:layout_marginEnd="56dp"
            android:src="@drawable/icon_mode_conversation_blue"/>

        <View
            android:id="@+id/view_border"
            android:layout_width="match_parent"
            android:layout_height="430dp"
            app:layout_constraintTop_toBottomOf="@id/layout_device_L_R"
            android:background="@drawable/shape_border"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="12dp"/>

        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/sb_eq_250"
            android:layout_width="140dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="@id/view_border"
            app:layout_constraintStart_toStartOf="@id/view_border"
            app:layout_constraintEnd_toEndOf="@id/view_border"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="206dp"
            android:rotation="270"
            android:thumb="@drawable/icon_thumb_90"
            android:thumbOffset="0dp"
            android:maxHeight="12dp"
            android:minHeight="12dp"
            android:max="10"
            android:progressDrawable="@drawable/seekbar_ear_volume_l"
            android:elevation="3dp"/>

        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/sb_eq_500"
            android:layout_width="140dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="@id/view_border"
            app:layout_constraintStart_toStartOf="@id/view_border"
            app:layout_constraintEnd_toEndOf="@id/view_border"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="68dp"
            android:rotation="270"
            android:thumb="@drawable/icon_thumb_90"
            android:thumbOffset="0dp"
            android:maxHeight="12dp"
            android:minHeight="12dp"
            android:max="10"
            android:progressDrawable="@drawable/seekbar_ear_volume_l"
            android:elevation="3dp"/>

        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/sb_eq_1000"
            android:layout_width="140dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="@id/view_border"
            app:layout_constraintStart_toStartOf="@id/view_border"
            app:layout_constraintEnd_toEndOf="@id/view_border"
            android:layout_marginTop="80dp"
            android:layout_marginStart="68dp"
            android:rotation="270"
            android:thumb="@drawable/icon_thumb_90"
            android:thumbOffset="0dp"
            android:maxHeight="12dp"
            android:minHeight="12dp"
            android:max="10"
            android:progressDrawable="@drawable/seekbar_ear_volume_l"
            android:elevation="3dp"/>

        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/sb_eq_1500"
            android:layout_width="140dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="@id/view_border"
            app:layout_constraintStart_toStartOf="@id/view_border"
            app:layout_constraintEnd_toEndOf="@id/view_border"
            android:layout_marginTop="80dp"
            android:layout_marginStart="206dp"
            android:rotation="270"
            android:thumb="@drawable/icon_thumb_90"
            android:thumbOffset="0dp"
            android:maxHeight="12dp"
            android:minHeight="12dp"
            android:max="10"
            android:progressDrawable="@drawable/seekbar_ear_volume_l"
            android:elevation="3dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/view_border"
            app:layout_constraintStart_toStartOf="@id/sb_eq_250"
            app:layout_constraintEnd_toEndOf="@id/sb_eq_250"
            android:layout_marginTop="150dp"
            android:textSize="14dp"
            android:text="250Hz"
            android:textColor="#606266"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>