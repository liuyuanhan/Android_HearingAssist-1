    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.ConnectFragment">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rlv_ble_device"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:layout_constraintTop_toTopOf="parent"/>

<!--        <ProgressBar-->
<!--            android:id="@+id/pb_search"-->
<!--            android:layout_width="40dp"-->
<!--            android:layout_height="40dp"-->
<!--            android:layout_marginTop="150dp"-->
<!--            app:layout_constraintStart_toStartOf="parent"-->
<!--            app:layout_constraintEnd_toEndOf="parent"-->
<!--            app:layout_constraintTop_toTopOf="parent"/>-->

        <Button
            style="@style/LongButtonOutLined"
            android:id="@+id/btn_search_device"
            android:layout_width="330dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="@string/search_for_a_device"
            app:layout_constraintBottom_toTopOf="@id/layout_my_device"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="20dp"/>

        <LinearLayout
            android:visibility="visible"
            android:id="@+id/layout_my_device"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white_F8"
            android:paddingStart="23dp"
            android:paddingEnd="23dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toTopOf="@id/btn_personalize">
            <TextView
                android:id="@+id/tv_my_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_device"
                android:textColor="@color/gray_tv_sub_title"
                android:textSize="14dp"/>
            <LinearLayout
                android:id="@+id/layout_device_L"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:orientation="horizontal"
                android:background="@drawable/shape_my_device"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">
                <ImageView
                    android:id="@+id/iv_device_L_status"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/icon_device_disconnected"/>
                <TextView
                    android:id="@+id/tv_device_L_side"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red_C7"
                    android:layout_marginStart="12dp"
                    android:text="L"
                    android:textStyle="bold"
                    android:textSize="16dp"/>
                <TextView
                    android:id="@+id/tv_device_L_name"
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:textColor="@color/red_C7"
                    android:textSize="14dp"
                    android:text="HA-Connect-L"/>
                <com.upixels.jh.hearingassist.view.BatteryView
                    android:id="@+id/bv_device_L_battery"
                    android:layout_width="33dp"
                    android:layout_height="18dp"
                    android:layout_marginStart="14dp"/>
                <TextView
                    android:id="@+id/tv_device_L_battery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="0%"/>
                <ImageView
                    android:id="@+id/tv_device_L_arrow"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="50dp"
                    android:src="@drawable/icon_right_arrow"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_device_R"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/shape_my_device"
                android:layout_marginTop="8dp">
                <ImageView
                    android:id="@+id/iv_device_R_status"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/icon_device_disconnected"/>
                <TextView
                    android:id="@+id/tv_device_R_side"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red_C7"
                    android:layout_marginStart="12dp"
                    android:text="R"
                    android:textStyle="bold"
                    android:textSize="16dp"/>
                <TextView
                    android:id="@+id/tv_device_R_name"
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:textColor="@color/red_C7"
                    android:textSize="14dp"
                    android:text="HA-Connect-R"/>
                <com.upixels.jh.hearingassist.view.BatteryView
                    android:id="@+id/bv_device_R_battery"
                    android:layout_width="33dp"
                    android:layout_height="18dp"
                    android:layout_marginStart="14dp"/>
                <TextView
                    android:id="@+id/tv_device_R_battery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="0%"/>
                <ImageView
                    android:id="@+id/tv_device_R_arrow"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="50dp"
                    android:src="@drawable/icon_right_arrow"/>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_personalize"
            android:visibility="gone"
            style="@style/LongButton"
            app:backgroundTint="@color/red_C7"
            app:iconTint="@color/white"
            android:textColor="@color/white"
            android:layout_width="330dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="@string/personalize_my_device"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="12dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

