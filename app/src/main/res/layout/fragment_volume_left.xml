<!--        android:layout_marginEnd="16dp"-->
<!--        android:layout_marginStart="16dp"-->
<!--        app:layout_constraintStart_toStartOf="parent">-->
<!--    </RelativeLayout>-->

    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/sb_left_volume"
        android:layout_width="256dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="220dp"
        android:rotation="270"
        android:thumb="@drawable/icon_thumb"
        android:thumbOffset="0dp"
        android:maxHeight="22dp"
        android:minHeight="22dp"
        android:max="10"
        android:progressDrawable="@drawable/seekbar_ear_volume_l"
        android:elevation="3dp"/>

    <TextView
        android:id="@+id/tv_L_volume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/sb_left_volume"
        android:layout_marginBottom="108dp"
        android:textSize="16dp"
        android:text="0%"
        android:textStyle="bold"
        android:textColor="@color/blue_09" />

    <TextView
        android:id="@+id/tv_L"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sb_left_volume"
        android:layout_marginTop="108dp"
        android:textSize="16dp"
        android:text="L"
        android:textStyle="bold"
        android:textColor="@color/blue_09"/>

    <androidx.appcompat.widget.AppCompatSeekBar
        android:visibility="invisible"
        android:id="@+id/sb_right_volume"
        android:layout_width="256dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="220dp"
        android:layout_marginStart="160dp"
        android:rotation="270"
        android:thumb="@drawable/icon_thumb"
        android:thumbOffset="0dp"
        android:maxHeight="22dp"
        android:minHeight="22dp"
        android:max="10"
        android:progressDrawable="@drawable/seekbar_ear_volume_r"
        android:elevation="3dp"/>

    <TextView
        android:visibility="invisible"
        android:id="@+id/tv_R_volume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/sb_right_volume"
        android:layout_marginStart="160dp"
        android:layout_marginBottom="108dp"
        android:textSize="16dp"
        android:text="0%"
        android:textStyle="bold"
        android:textColor="@color/red_C7"/>

    <TextView
        android:visibility="invisible"
        android:id="@+id/tv_R"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sb_left_volume"
        android:layout_marginStart="160dp"
        android:layout_marginTop="108dp"
        android:textSize="16dp"
        android:text="R"
        android:textStyle="bold"
        android:textColor="@color/red_C7"/>


</androidx.constraintlayout.widget.ConstraintLayout>