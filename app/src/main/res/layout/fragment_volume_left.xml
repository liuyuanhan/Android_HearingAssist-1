<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_fragment_volume_l"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:ignore="SpUsage"
    tools:context=".ui.main.VolumeFragment">

    <View
        android:id="@+id/view_bg_l_r"
        android:layout_width="160dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="17dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/shape_view_bg_blue"/>

    <ImageView
        android:id="@+id/iv_L"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="@id/view_bg_l_r"
        app:layout_constraintEnd_toEndOf="@id/view_bg_l_r"
        app:layout_constraintTop_toTopOf="@id/view_bg_l_r"
        app:layout_constraintBottom_toBottomOf="@id/view_bg_l_r"
        android:scaleType="centerInside"
        android:src="@drawable/icon_l_device"/>

    <ImageView
        android:visibility="gone"
        android:id="@+id/iv_l_r"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerInside"
        app:layout_constraintTop_toTopOf="@id/view_bg_l_r"
        app:layout_constraintBottom_toBottomOf="@id/view_bg_l_r"
        app:layout_constraintStart_toStartOf="@id/view_bg_l_r"
        app:layout_constraintEnd_toEndOf="@id/view_bg_l_r"
        android:src="@drawable/icon_l_r_connected"/>

    <ImageView
        android:visibility="gone"
        android:id="@+id/iv_R"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintEnd_toEndOf="@id/view_bg_l_r"
        app:layout_constraintTop_toTopOf="@id/view_bg_l_r"
        app:layout_constraintBottom_toBottomOf="@id/view_bg_l_r"
        android:layout_marginEnd="22dp"
        android:scaleType="centerInside"
        android:src="@drawable/icon_r_device"/>

    <ImageView
        android:visibility="invisible"
        android:id="@+id/iv_mode_R"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/view_bg_l_r"
        app:layout_constraintBottom_toBottomOf="@id/view_bg_l_r"
        android:layout_marginEnd="16dp"
        android:src="@drawable/icon_mode_conversation_nor"/>

    <ImageView
        android:id="@+id/iv_mode_L"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/view_bg_l_r"
        app:layout_constraintBottom_toBottomOf="@id/view_bg_l_r"
        android:layout_marginEnd="56dp"
        android:src="@drawable/icon_mode_conversation_blue"/>

<!--    <RelativeLayout-->
<!--        android:id="@+id/layout_volume_bg"-->
<!--        android:layout_width="0dp"-->
<!--        android:layout_height="432dp"-->
