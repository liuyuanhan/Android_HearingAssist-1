    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.ConnectFragment">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rlv_ble_device"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:layout_constraintTop_toTopOf="parent"/>

        <ProgressBar
            android:id="@+id/pb_search"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="150dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <Button
            style="@style/LongButtonOutLined"
            android:id="@+id/btn_search_device"
            android:layout_width="330dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="@string/search_for_a_device"
            app:layout_constraintBottom_toTopOf="@id/layout_my_device"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="20dp"/>

        <LinearLayout
            android:visibility="invisible"
            android:id="@+id/layout_my_device"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white_F8"
            android:paddingStart="23dp"
            android:paddingEnd="23dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toTopOf="@id/btn_personalize">
            <TextView
                android:id="@+id/tv_my_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_device"
                android:textColor="@color/gray_tv_sub_title"
                android:textSize="14dp"/>
            <LinearLayout
                android:id="@+id/layout_device_0"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:orientation="horizontal"
                android:background="@drawable/shape_my_device"
                android:layout_marginTop="8dp"/>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/layout_device_1"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:orientation="horizontal"
                android:background="@drawable/shape_my_device"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_personalize"
            android:visibility="gone"
            style="@style/LongButton"
            app:backgroundTint="@color/red_C7"
            app:iconTint="@color/white"
            android:textColor="@color/white"
            android:layout_width="330dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="@string/personalize_my_device"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="12dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

