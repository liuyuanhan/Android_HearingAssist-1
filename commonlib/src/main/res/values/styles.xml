<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Dialog 基本style -->
    <style name="BaseDialogFragmentStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item> <!-- 设置dialog的背景 -->
        <item name="android:windowFrame">@null</item>               <!-- Dialog的windowFrame框为无 -->
        <item name="android:windowNoTitle">true</item>              <!-- 是否不显示title -->
        <!-- 是否浮现在activity之上,true时导致大小不全屏, 如果继承Dialog, 这里需要为true，不然setCanceledOnTouchOutside(true) 无效 -->
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>        <!-- 是否半透明 -->
        <item name="android:windowContentOverlay">@null</item>      <!-- 是否有遮盖 -->
        <item name="android:backgroundDimEnabled">true</item>       <!-- 背景是否模糊显示 -->
        <item name="android:windowCloseOnTouchOutside">true</item>  <!-- 点击非dialog关闭 -->
    </style>

    <!-- *************************************** 动画 *************************************** -->
    <!-- 底部 进入/退出 动画 -->
    <style name="dialog_anim_bottom_in_out">
        <item name="android:windowEnterAnimation">@anim/dialog_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_bottom_out</item>
    </style>

</resources>
